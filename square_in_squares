def drawSquare(myTurtle, size):
    for i in range(4):
        myTurtle.forward(size)
        myTurtle.right(90)

def drawNestedSquares(myTurtle, size, numSquares):
    increment = size // numSquares 
    for i in range(numSquares):
        drawSquare(myTurtle, size)
        myTurtle.penup()           
        myTurtle.forward(increment // 2)  
        myTurtle.right(90)
        myTurtle.forward(increment // 2)
        myTurtle.left(90)
        myTurtle.pendown()          
        size -= increment           

numSquares = 3  #choose 3 or 5

if numSquares == 3:
    myTurtle.penup()
    myTurtle.goto(-50, 50)  
    myTurtle.pendown()
    drawNestedSquares(myTurtle, 100, 3)  
elif numSquares == 5:
    myTurtle.penup()
    myTurtle.goto(150, 50)  
    myTurtle.pendown()
    drawNestedSquares(myTurtle, 100, 5) 

